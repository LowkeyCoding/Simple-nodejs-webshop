<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3"></div>
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <br />
        <br />
        <div id="charge-error" class="alert alert-danger margn15 {{#if noError}}hidden{{/if}}">
            {{errMsg}}
        </div>
            <form action="/checkout" method="POST" id="checkout-form">
                <input type="hidden" id="token" name="token" />
                <div class="group">
                    <label style="border-bottom:  0px!important;margin-bottom: -2rem;">
                    </label>
                    <label>
                        <span>Name</span>
                        <input id="name" name="name" class="field" placeholder="name" />
                    </label>
                    <label>
                        <span>Adress line 1</span>
                        <input id="adress-line1" name="adressLine1" class="field" placeholder="adress" />
                    </label>
                    <label>
                        <span>Adress line 2</span>
                        <input id="adress-line2" name="adressLine2" class="field" placeholder="adress" />
                    </label>
                    <label>
                        <span>City</span>
                        <input id="city" name="city" class="field" placeholder="city" />
                    </label>
                    <label>
                        <span>Postal code</span>
                        <input id="postal-code" name="postalCode" class="field" placeholder="postal code" />
                    </label>
                    <label>
                        <span>State</span>
                        <input id="state" name="state" class="field" placeholder="state" />
                    </label>
                    <label>
                        <span>Country</span>
                        <input id="country" name="country" class="field" placeholder="Country" />
                    </label>
                    <label>
                        <span>Card number</span>
                        <div id="card-number-element" class="field"></div>
                        <span class="brand"><i class="pf " id="brand-icon"></i></span>
                    </label>
                    <label>
                        <span>Expiry date</span>
                        <div id="card-expiry-element" class="field"></div>
                    </label>
                    <label style="padding-bottom: 3.2rem;">
                        <span>CVC</span>
                        <div id="card-cvc-element" class="field"></div>
                    </label>
                </div>
                <button id="buttonPay" type="submit">Pay $ {{total}}</button>
                <div class="outcome">
                <div class="error"></div>
                <div class="success"></div>
                </div>
            </form>
    </div>
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3"></div>
</div>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/paymentfont/1.1.2/css/paymentfont.min.css">
<link rel="stylesheet" type="text/css" href="/stylesheets/checkout.css">
<script type="text/javascript" src="https://js.stripe.com/v3/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>