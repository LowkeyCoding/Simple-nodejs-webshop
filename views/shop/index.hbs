<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success marg15 {{#if noMessage}}hidden{{/if}}">
            {{ successMsg }}
        </div>
    </div>
</div>
{{# each products }}
    <div class="card-group">
        {{# each this }}
        <div class="col-md-4">
            <figure class="card card-product card-shadow">
                <div class="img-wrap sm-product-image" style="width: 100%;height: 100%;"><img src="{{ this.imagePath }}" style="width: 100%;max-height: 500px;"></div>
                <figcaption class="info-wrap">
                        <h4 class="title">{{ this.title }}</h4>
                        <p class="desc" style="white-space: pre-line;">{{ this.description }}</p>
                </figcaption>
                <div class="bottom-wrap">
                    <a href="/product/{{ this._id }}" class="btn btn-sm btn-primary float-right">Product Page</a>
                    <div class="price-wrap h5">
                        <span class="price-new">$ {{ this.price }}</span>
                    </div> <!-- price-wrap.// -->
                </div> <!-- bottom-wrap.// -->
            </figure>
        </div> <!-- col // -->
        {{/each}}
    </div>
{{/each}}
<script type="text/javascript" src="/javascripts/index.js"></script>