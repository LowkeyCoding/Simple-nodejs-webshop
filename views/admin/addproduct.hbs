<div class="row">
    <div class="col-md-3 col-md-offset-2"></div>
    <div class="col-md-6 col-md-offset-2">
        <div class="card-group">
            <div class="card-unlimited card-shadow" style="width:100%; margin-top:30px">
                <div class="card-header">Add new product</div>
                    <div class="card-body">
                        <form id="addProduct" action="/admin/addproduct" method="POST">
                            <div class="form-group">
                                <label for="imagePath">Image path</label>
                                <input type="imagePath" id="imagePath" name="imagePath" class="form-control" placeholder="Local or online image link">
                                <br />
                            </div>
                            <div class="form-group">
                                <label for="title">Product name</label>
                                <input type="title" id="title" name="title" class="form-control" placeholder="Product name">
                                <br />
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea type="description" id="description" name="description" class="form-control" cols="40" rows="5" placeholder="Description"></textarea>
                                <br />
                            </div>
                            <div class="form-group">
                                <label for="price">Price</label>
                                <input type="price" id="price" name="price" class="form-control" placeholder="Price is in USD($)">
                                <br />
                            </div>
                            <div class="form-group">
                                <label for="productLink">Product link</label>
                                <input type="productLink" id="productLink" name="productLink" class="form-control" placeholder="Aliexpress link">
                                <br />
                            </div>
                            <div class="form-group">
                                <label for="brand">Brand</label>
                                <input type="brand" id="brand" name="brand" class="form-control" placeholder="Brand/Show">
                                <br />
                            </div>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#add-product-warning">Add product</button>
                            <!-- Modal -->
                            <div class="modal fade" id="add-product-warning" tabindex="-1" role="dialog" aria-labelledby="add-product-warningLabel" aria-hidden="true">
                                <div class="modal-dialog modal-sm">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title" id="add-product-warningLabel">Add product</h4>
                                        </div>
                                    <div class="modal-body">
                                        Do you want to add this product to your store?
                                    </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-success" onclick='document.getElementById("addProduct").submit();' data-dismiss="modal">Yes</button>
                                            <button type="button" class="btn btn-danger" onclick='' data-dismiss="modal">No</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        <br />
    </div>
    <div class="col-md-6 col-md-offset-2"></div>
</div>