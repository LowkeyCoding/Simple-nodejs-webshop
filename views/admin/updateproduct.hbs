{{# each products }}
    <div class="card-group">
        {{# each this }}
        <div class="col-md-4">
            <figure class="card card-product card-shadow">
                <div class="img-wrap sm-product-image" style="width: 100%;height: 100%;"><img src="{{ this.imagePath }}" style="width: 100%;max-height: 500px;"></div>
                <figcaption class="info-wrap">
                        <h4 class="title">{{ this.title }}</h4>
                </figcaption>
                <div class="bottom-wrap">
                    <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#update-product-warning">update product</button>
                    <!-- Modal -->
                    <div class="modal fade" id="update-product-warning" tabindex="-1" role="dialog" aria-labelledby="update-product-warningLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="update">
                                    <div class="card-header">update new product</div>
                                    <div class="card-body">
                                        <form id="updateProduct" action="/admin/updateproduct/{{ this._id }}" method="POST">
                                            <div class="form-group">
                                                <label for="imagePath">Image path</label>
                                                <input type="imagePath" id="imagePath" name="imagePath{{ this._id }}" class="form-control" placeholder="Local or online image link" value="{{ this.imagePath}}">
                                                <br />
                                            </div>
                                            <div class="form-group">
                                                <label for="title">Product name</label>
                                                <input type="title" id="title" name="title{{ this._id }}" class="form-control" placeholder="Product name" value="{{ this.title }}">
                                                <br />
                                            </div>
                                            <div class="form-group">
                                                <label for="description">Description</label>
                                                <textarea type="description" id="description" name="description{{ this._id }}" class="form-control" cols="40" rows="5" placeholder="Description">{{ this.description }}</textarea>
                                                <br />
                                            </div>
                                            <div class="form-group">
                                                <label for="price">Price</label>
                                                <input type="price" id="price" name="price{{ this._id }}" class="form-control" placeholder="Price is in USD($)" value="{{this.price}}">
                                                <br />
                                            </div>
                                            <div class="form-group">
                                                <label for="productLink">Product link</label>
                                                <input type="productLink" id="productLink" name="productLink{{ this._id }}" class="form-control" placeholder="Aliexpress link" value="{{ this.productLink }}">
                                                <br />
                                            </div>
                                            <div class="form-group">
                                                <label for="brand">Brand</label>
                                                <input type="brand" id="brand" name="brand{{ this._id }}" class="form-control" placeholder="Brand/Show" value="{{ this.brand }}">
                                                <br />
                                            </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-success" onclick='document.getElementById("updateProduct").submit();' data-dismiss="modal">Yes</button>
                                    <button type="button" class="btn btn-danger" onclick='' data-dismiss="modal">No</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="price-wrap h5">
                        <span class="price-new">$ {{ this.price }}</span>
                    </div>
                </div>
            </figure>
        </div>
        {{/each}}
    </div>
{{/each}}